#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_URL="https://pokeapi.co/api/v2/pokemon"

declare -A pids

fetch_pokemon() {
  local NAME=$1
  echo "ğŸ”„ Fetching $NAME..."
  RESPONSE=$(curl -s -f "$API_URL/$NAME")
  if [ $? -eq 0 ]; then
    echo "$RESPONSE" > "${NAME}.json"
    echo "âœ… $NAME saved."
  else
    echo "âŒ Failed to fetch $NAME on $(date)" >> errors.txt
  fi
}

for NAME in "${POKEMONS[@]}"; do
  fetch_pokemon "$NAME" &
  pids[$NAME]=$!
done

# Monitor processes and kill if they run > 10 seconds
for NAME in "${!pids[@]}"; do
  PID=${pids[$NAME]}
  ( sleep 10 && kill -9 $PID 2>/dev/null && echo "â° $NAME fetch killed due to timeout." ) &
done

wait
echo "ğŸ‰ All PokÃ©mon data fetched."
