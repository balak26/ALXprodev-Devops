#!/bin/bash
# Script to fetch PokÃ©mon data in parallel with process management

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_URL="https://pokeapi.co/api/v2/pokemon"

# Function to fetch data for a single PokÃ©mon
fetch_pokemon() {
  local NAME=$1
  echo "ðŸ”„ Fetching $NAME..."

  RESPONSE=$(curl -s -f "$API_URL/$NAME")
  if [ $? -eq 0 ]; then
    echo "$RESPONSE" > "${NAME}.json"
    echo "âœ… $NAME saved."
  else
    echo "âŒ Failed to fetch $NAME on $(date)" >> errors.txt
  fi
}

# Fetch all PokÃ©mon in parallel
for NAME in "${POKEMONS[@]}"; do
  fetch_pokemon "$NAME" &
done

# Wait for all background jobs to finish
wait

echo "ðŸŽ‰ All PokÃ©mon data fetched."
